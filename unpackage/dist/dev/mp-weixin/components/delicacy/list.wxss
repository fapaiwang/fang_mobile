
.recommendHouseView {
	padding-top: 160rpx;
}.houseItemView {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 280rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}.houseItemImg {
	width: 240rpx;
	height: 149rpx;
	border-radius:10rpx;
}.houseItemImg image {
	width: 100%;
	height: 100%;
}.houseItem {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 25rpx;
}.itemTitle{
	height:80rpx;
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:#333;
	overflow: hidden;
	text-overflow: ellipsis;
	display:-webkit-box; /*作为弹性伸缩盒子模型显示。 */
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
}.itemInfo {
	font-size: 24rpx;
	color: #666;
	margin: 3rpx 0;
}.itemPrice {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	color: #333333;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 20rpx;
}.redPrice {
	margin-left: 10rpx;
	color: #E02E24;
	font-size: 26rpx;
}.grayPrice {
	margin-left: 10rpx;
	color: #333;
	font-size: 26rpx;
}.createIime {
	margin-top: 26rpx;
	background:rgba(199,49,38, 0.15);
	border-radius: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	text-align: center;
}.createIimeIconinfo {
	font-size: 24rpx;
	color: #E02E24;
	line-height: 44rpx;
}.createIimeIcon {
}.createIimeIcon image {
	width: 24rpx;
	height: 24rpx;
	margin-left: 12rpx;
	margin-right: 7rpx;
}.navigator-hover,.navigator-hover:hover{
	background: none;
	cursor: pointer;
}.navigator-hover{
	opacity: unset;
}.loading{
	line-height: 2em;
	text-align: center;
	color: #888;
	font-size: 20rpx;
	margin-top: 20rpx;
}.tag{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	width: 100%;
	margin-top: 20rpx;
}.tag text{
	width:114rpx;
	height:50rpx;
	background:#F5F3EA;
	border-radius:5rpx;
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:#C8A96A;
	line-height:50rpx;
	text-align: center;
}.tag text:last-child{
	background:#E4EFFD !important;
	color: #4297FF !important;
}.posi{
	position: fixed;
	overflow: hidden;
	height: 100%;
}

