.fColor{
	color: #DF2D23 !important;
}
.item {
  width: 49%;
  padding-right: 20rpx;
  display: inline-block;
  vertical-align: top;
}
.img {
	display: inline-block;
	width:335rpx;
	height:208rpx;
}
.img image {
  width:100%;
  height: 100%;
  border-radius: 10rpx;
}
.titleView {
	padding-top: 19rpx;
	padding-bottom: 14rpx;
	font-size: 28rpx;
}
.titleView text {
	font-size: 28rpx;
	color: #333333;
}
.titleinfoView {
	width: 100%;
	padding-right: 20rpx;
}
.titleInfo {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding-right: 20rpx;
	font-size: 24rpx;
}
.second_total{
	display: inline-block;
	margin-top: 4rpx;
}
.second_total text{
	color: #333333;
}
.price text{
	color: #333333;
	font-size: 28rpx;
}
.featuredView {
	margin-top: 45rpx;
	padding: 0 30rpx;
}
.featuredtTitleView {
	height: 38rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-bottom: 30rpx;
}
.titleText{
	font-size: 40rpx;
	color: #333;
}
.tieleImgView {
	height: 38rpx;
	width: 32rpx;
}
