
._div,scroll-view,swiper {
	box-sizing: border-box;
}
.wuc-tab {
	width: 100%;
    white-space: nowrap;
}
.wuc-tab-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.wuc-tab-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
    height: 50rpx;
	font-size: 28rpx;
	color: #333;
	line-height: 50rpx;
}
.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.text-center {
    text-align: center;
}
.flex-sub {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.text-white{
  color:#fff;
  padding: 0 15rpx;
  background:-webkit-linear-gradient(left,rgba(245,111,111,1),rgba(221,84,74,1));
  background:linear-gradient(90deg,rgba(245,111,111,1),rgba(221,84,74,1));
  border-radius:25rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.bg-white{
    background-color: #ffffff;
}
.bg-blue{
    background-color: #0081ff;
}
.text-orange{
  color: #f37b1d
}
.text-xl {
	font-size: 36rpx;
}

