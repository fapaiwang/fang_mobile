.recommendHouseView {
	padding: 0 30rpx;
	padding-top: 160rpx;
}.houseItemView {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 280rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}.houseItemImg {
	width: 240rpx;
	height: 149rpx;
	border-radius:10rpx;
}.houseItemImg image {
	width: 100%;
	height: 100%;
}.houseItem {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	margin-left: 25rpx;
}.itemTitle{
	height:80rpx;
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:bold;
	color:#333;
	overflow: hidden;
	text-overflow: ellipsis;
	display:-webkit-box; /*作为弹性伸缩盒子模型显示。 */
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
}.itemInfo {
	font-size: 24rpx;
	color: #666;
	margin: 3rpx 0;
}.itemPrice {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	color: #333333;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	font-size: 20rpx;
}.redPrice {
	margin-left: 10rpx;
	color: #E02E24;
	font-size: 26rpx;
}.grayPrice {
	margin-left: 10rpx;
	color: #333;
	font-size: 26rpx;
}.createIime {
	margin-top: 20rpx;
	background:rgba(199,49,38, 0.15);
	/* opacity:0.06; */
	border-radius: 10rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	text-align: center;
}.createIimeIconinfo {
	font-size: 24rpx;
	color: #F5F5F5;
	line-height: 44rpx;
	margin-top: 6rpx;
	color: #333;
	font-weight:800;
	font-family:PingFang SC;
}.createIimeIcon {
}.createIimeIcon image {
	width: 24rpx;
	height: 24rpx;
	margin-left: 12rpx;
	margin-right: 7rpx;
}.navigator-hover,.navigator-hover:hover{
	background: none;
	cursor: pointer;
}.navigator-hover{
	opacity: unset;
}.loading{
	line-height: 2em;
	text-align: center;
	color: #888;
	font-size: 20rpx;
	margin-top: 20rpx;
}

