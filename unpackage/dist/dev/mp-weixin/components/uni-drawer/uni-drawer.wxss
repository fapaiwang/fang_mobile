































































































	/* 抽屉宽度
 */
.uni-drawer.data-v-56836304 {

		display: block;

		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		overflow: hidden;
		z-index: 999;
}
.uni-drawer__content.data-v-56836304 {

		display: block;

		position: absolute;
		top: 0;
		width: 220rpx;
		bottom: 0;
		background-color: #ffffff;
		-webkit-transition: -webkit-transform 0.3s ease;
		transition: -webkit-transform 0.3s ease;
		transition: transform 0.3s ease;
		transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.uni-drawer--left.data-v-56836304 {
		left: 0;
		-webkit-transform: translateX(-220rpx);
		        transform: translateX(-220rpx);
}
.uni-drawer--right.data-v-56836304 {
		right: 0;
		-webkit-transform: translateX(220rpx);
		        transform: translateX(220rpx);
}
	/* 顶部 */
.uni-drawer--top.data-v-56836304 {
		top: 0;
		width: 100%;
		bottom: 220rpx;
		-webkit-transform: translateY(10rpx);
		        transform: translateY(10rpx);
}
	/* 底部 */
.uni-drawer--bottom.data-v-56836304 {
		bottom: 0;
		width: 100%;
		top: 220rpx;
		-webkit-transform: translateY(10rpx);
		        transform: translateY(10rpx);
}
.uni-drawer__content--visible.data-v-56836304 {
		-webkit-transform: translateX(0rpx);
		        transform: translateX(0rpx);
}
.uni-drawer__mask.data-v-56836304 {

		display: block;

		opacity: 0;
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		background-color: rgba(0, 0, 0, 0.4);
		-webkit-transition: opacity 0.3s;
		transition: opacity 0.3s;
}
.uni-drawer__mask--visible.data-v-56836304 {

		display: block;

		opacity: 1;
}

